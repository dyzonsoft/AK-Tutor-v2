@namespace PlanerApp.Components


<EditForm Model="_model" OnInvalidSubmit="LoginUserAsync">
    <DataAnnotationsValidator />

    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Vítejte v aplikaci planerapp v2.0</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" HelperText="Required" @bind-Value="@_model.Email" />
            <MudTextField InputType="InputType.Password" Label="Password" HelperText="Required" @bind-Value="@_model.Password" />
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Class="ml-4">Vytvořit účet</MudButton>
        </MudCardActions>
    </MudCard>

</EditForm>

